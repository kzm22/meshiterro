<!-- ユーザーの詳細　-->
<div class = "profile-container">
  <h3 class="profile-name"><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集",edit_user_path(@user.id) %></p>
  <% end %>
</div>

